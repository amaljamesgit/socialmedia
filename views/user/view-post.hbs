<div class="row">
    <div class="container">
        <div class="mt-8 pull-right">
            <a href="/add-post" class="btn btn-success ml-auto">Add Post</a>
        </div>
    </div>
</div><br>


<section class="mt-3">
    <div class="container ">
        <div class="row">
            {{#each post}}
            <div class="col-3">


                <div class="card">

                    <div class="card-body">

                        <div class="row">
                            <div class="col-md-6 mb-4">

                                <div class="form-outline">
                                    <input type="text" class="form-control form-control-lg" value="{{this.title}} " />
                                    <label class="form-label" for="Name">title</label>
                                </div>

                            </div>

                            <div class="col-md-6 mb-4">

                                <div class="form-outline">
                                    <input type="date" class="form-control form-control-lg" value="{{this.date}}" />
                                    <label class="form-label" for="date">date</label>
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">


                                <div class="form-outline">
                                    <img src="/post-images/{{this._id}}.jpg" alt="" style="width: 100px; height:auto"
                                        id="imgview" class="pt-3">

                                </div>



                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="form-outline">
                                    <input type="text" class="form-control form-control-lg" value="{{this.private}}" />
                                    <label class="form-label" for="Name">post private</label>
                                </div>


                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 "></div>
                            <div class="col-md-6 ">
                                <div class="mt-2 ">
                                    <a href="/user/edit-post/{{this._id}}" class="btn btn-primary">Edit</a>

                                    <a href="/user/delete-post/{{this._id}}" class="btn btn-danger"
                                        onclick=" return confirm('Are you want to delete {{this.title}} ?')">Delete</a>
                                </div>
                            </div>
                        </div><br>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</section>